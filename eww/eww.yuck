(defpoll time :interval "20s" `date +" %b %dÏùº %R"`)

(deflisten battery `bash ./scripts/battery -i`)

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :width "100%" :anchor "top center")
  :exclusive true
  (box :class "main-container" :space-evenly "true"
    (box :halign "start"
      (label :text "${time}")
    )
    (box :halign "end"
      (button :class "systray"
	:onclick ""
	(label :text "${battery}")
      )
    )
  )
)
